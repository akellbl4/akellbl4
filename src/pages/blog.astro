---
import Layout from '../layouts/main'
import BlogItem from '../components/BlogItem'

const title = 'Blog'
const description = ''
const postsViewsScriptPath = Astro.resolve('../scripts/blog-views.js')
const posts = Astro.fetchContent('./blog/*.md');

posts.sort((a, b) => new Date(b.publishedAt).getTime() - new Date(a.publishedAt).getTime());
---

<script src={postsViewsScriptPath} defer />

<Layout request={Astro.request} title={title} description={description}>
	<svg class="hidden" aria-hidden="true" xmlns="http://www.w3.org/2000/svg">
		<symbol id="external-link-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
			<path
				strokeLinecap="round"
				strokeLinejoin="round"
				strokeWidth="2"
				d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
			/>
		</symbol>
	</svg>
	<h1 class="font-bold text-4xl sm:text-5xl tracking-tight mb-6 sm:mb-10">{title}</h1>
	<ul class="space-y-8 sm:space-y-12">
		{posts.map((post) => (
			<li>
				<BlogItem {...post}/>
			</li>
		))}
	</ul>
</Layout>
