---
import clsx from 'clsx'

type Props = {
	href: string
	active: boolean
}

const { href, active } = Astro.props as Props
---

<li class="after:h-0 after:invisible after:overflow-hidden after:select-none after:pointer-events-none after:font-bold after:content-[attr(data-text)]">
	<a
		href={href}
		class={clsx(active
					? 'text-gray-600 dark:text-gray-100 font-bold'
					: 'text-gray-500 dark:text-gray-300 transition-colors duration-200 border-b dark:border-gray-700 hover:border-current')}
	>
		<slot></slot>
	</a>
</li>
