---
import Layout from '../components/Layout'

const { request }= Astro
---

<Layout request={request}>
	<article class="my-auto pt-2">
		<a href="/about" class="inline-block text-gray-800">
			<h1 class="title relative inline-flex flex-col-reverse sm:flex-row mb-3">
				<div class="relative inline-block text-4xl sm:text-7xl md:text-8xl lg:text-9xl font-bold tracking-tight">
					<span class="title-gradient">Pavel Mineev</span>
					<span class="title-cover absolute inset-0 transition-opacity duration-500">
						Pavel Mineev
					</span>
				</div>
				<div class="relative flex w-10 h-10 mb-2 sm:w-16 sm:h-16 sm:-mt-10">
					<div class="avatar absolute inset-0 h-full w-full flex rounded-full overflow-hidden">
					</div>
					<div class="photo h-full w-full flex rounded-full overflow-hidden"></div>
				</div>
			</h1>
		</a>
		<p class="block text-md w-[80%] md:w-[85%] sm:text-xl font-medium sm:leading-relaxed text-gray-400">
			<span class="transition-color duration-300 hover:text-gray-600 dark:hover:text-gray-200">
				I&apos;m a Software Engineer.
			</span>{" "}
			<span class="transition-color duration-300 hover:text-gray-600 dark:hover:text-gray-200">
				I work at{" "}
				<a
					class="border-b dark:border-gray-600 dark:hover:border-gray-400"
					href="https://junehomes.com"
				>
					June Homes{" "}
				</a>
				as&nbsp;a&nbsp;team&nbsp;leader.
			</span>{" "}
			<br class="hidden md:inline" />
			<span class="transition-color duration-300 hover:text-gray-600 dark:hover:text-gray-200">
				I like to contribute to{" "}
				<a
					href="/about#projects"
					class="border-b dark:border-gray-600 dark:hover:border-gray-400"
				>
					open-source
				</a>{" "}
				and&nbsp;
				<a
					href="/blog"
					class="border-b dark:border-gray-600 dark:hover:border-gray-400"
				>
					write
				</a>{" "}
				about web development.
			</span>
		</p>
	</article>
</Layout>
